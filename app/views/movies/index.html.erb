<h1>Movies</h1>

<%= form_with url: search_movies_path, method: :post,
  data: {controller: "search-field", search_field_target: "form" }, html: { id: 'message'} do |form| %>

  <%= text_field_tag 'whatever_field_id', '', data: { search_field_target: "code" } %><br>
  <%= form.search_field :title_search, data: { action: "input->search-field#search", search_field_target: "search" } %>
  <%= content_tag :span, '', data: { search_field_target: "display" } %>
<% end %>

<div id="search_results" data-controller="search-results" data-search-results-search-field-outlet="#message"
  data-search-results-target="container"></div>
